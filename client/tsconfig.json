{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDirs": ["src", "test"],
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"],
      "@/test/*": ["../test/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}